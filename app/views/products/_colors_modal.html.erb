<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= "Choose colors for filter products" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

       <div class="modal-body">
        <form id="colorFilterForm">
        <%#binding.pry%>
          <% colors.each do |color| %>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="color_<%= color.id %>" value="<%= color.id %>">
              <label class="form-check-label" for="color_<%= color.id %>"><%= color.label %></label>
            </div>
          <% end %>
        </form>
      </div>




      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- Replace button with a link -->
        <a href="/" class="btn btn-primary" id="filter-color">Filter</a>
      </div>
    </div>
  </div>
</div>
