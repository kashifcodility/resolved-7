<div class="modal fade" id="materialModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= "Choose materials for filter products" %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

       <div class="modal-body">
        <form id="materialFilterForm">
        <%#binding.pry%>
          <% materials.each do |material| %>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="material_<%= material.id %>" value="<%= material.id %>">
              <label class="form-check-label" for="material_<%= material.id %>"><%= material.label %></label>
            </div>
          <% end %>
        </form>
      </div>




      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <!-- Replace button with a link -->
        <a href="/" class="btn btn-primary" id="filter-material">Filterss</a>
      </div>
    </div>
  </div>
</div>
