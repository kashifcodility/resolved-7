<div class="container">
    <div class="woocommerce">

        
        <div class="member-info">

            <%#binding.pry%>
            <div class="add-card">
                <br><br>
                <h4>Add Delivery Appointment for projects</h4>
                <hr>
                <%= form_tag(create_delivery_appointment_path,id: 'payment-form') %>                  

                   <div class="col-sm-12 col-md-6">

                     <div class="form-group">
                       <%= text_field_tag(:client_name, nil, class: 'form-control',placeholder: 'Client name', required: true, value: current_user&.username) %>
                     </div>

                     <div class="form-group">
                       <%= text_field_tag(:contact_info, nil, class: 'form-control',placeholder: 'Contact info', required: true, value: current_user&.billing_address&.address1) %>
                     </div>

                     <div class="form-group">
                       <%= text_field_tag(:project_name, nil, class: 'form-control',placeholder: 'Project name', required: true) %>
                     </div>

                     
                     <div class="form-group">
                       <%= text_field_tag(:schedule_date, "", class: 'form-control datepicker-ab',placeholder: 'Date', required: true) %>
                     </div>

                     <div class="form-group">
                       <%= select_tag(:delivery, options_for_select([['Delivery', 'Delivery'], ['Will Call', 'Will Call']]), class: 'form-control', required: true) %>
                     </div>

                     <div class="form-group">
                       <%= text_field_tag(:approx_budget, nil, class: 'form-control',placeholder: 'Approx budget', required: true) %>
                     </div>
                   

                   


                    
                   
                   <div class="form-group">
                       <%= text_area_tag(:special_instructions, nil, class: 'form-control',placeholder: 'Special instructions', required: true) %>
                   </div>

               </div>

                   <button type="submit" class="btn btn-outline-secondary btn-lg btn-block">Delivery Appointment</button>
                </form>   


            </div>

        </div>
    </div>
</div>
