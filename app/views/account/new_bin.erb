<div class="container">
    <div class="woocommerce">

        <h1 class="category-header">My Account</h1>
        <%= render 'navigation' %>

        <div class="member-info">

            <!-- Add Credit Card Form -->
            <div class="add-card">

                <h4>Add Bin</h4>
                <hr>
                <br>
                <%= form_tag(create_bin_path,id: 'payment-form-bin') %>
                
                   
                   <div class="col-sm-12 col-md-6">
                   <h5></h5>

                   <div class="form-group">
                      <%= text_field_tag(:name, nil, class: 'form-control',placeholder: 'Bin name', required: true) %>
                      <%= hidden_field_tag(:order_id, nil, value: params[:order_id], class: 'form-control') %>
                      <%= hidden_field_tag(:line, nil, value: params[:line], class: 'form-control') %>
                   </div>




               </div>
              
                   <button type="submit" class="btn btn-primary" style="margin-left: 15px;">Add Bin</button>
                </form>   


            </div>

        </div>
    </div>
</div>
